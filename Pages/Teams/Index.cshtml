@page
@model ContosoUniversity.Pages.Teams.IndexModel

@{
    ViewData["Title"] = "Team";
}

<h1>Teams</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teams[0].TeamID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teams[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teams[0].Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teams[0].Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Teams)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credits)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.TeamID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.TeamID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.TeamID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

